<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4  mb-3">
            <div class="card" style="height: 100%">
                <div style="height:100%">
                    <img src="~/images/@item.Img" class="card-img-top" height="300px" width="200px" alt="...">
                </div>
                <div class="card-body">

                    <h5 class="card-title">@item.Name</h5>

                    <br /><br />
                    <a href="https://localhost:7057/Home/CompleteAppointment/@item.Id" class="btn btn-primary">Appointment</a>
                </div>
            </div>
        </div>
    }

</div>